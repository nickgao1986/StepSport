<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
       xmlns:app="http://schemas.android.com/apk/res-auto"
       android:layout_width="@dimen/header_photo_width"
       android:layout_height="@dimen/header_photo_width">

    <com.ringcentral.android.utils.ui.menu.ContactPhotoView
        android:id="@+id/btn_main_menu_action_menu"
        android:layout_width="@dimen/header_profile_width"
        android:layout_height="@dimen/header_profile_width"
        android:background="@null"
        android:scaleType="fitXY"
        app:border_width="0"
        app:corner_radius="180"
        android:layout_centerInParent="true"
        app:default_image="@drawable/profile"/>

    <ImageView
        android:id="@+id/red_dot_imageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="@null"
        android:scaleType="centerInside"
        android:layout_marginBottom="2dp"
        android:visibility="invisible"/>

</merge>